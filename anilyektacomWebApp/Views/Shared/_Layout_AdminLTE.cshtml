@using Microsoft.AspNetCore.Http.Extensions
@{
    var uri = new Uri(Context.Request.GetEncodedUrl());
    string GecerliAdres = uri.PathAndQuery;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>|| ~ @ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/Content/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__wobble" src="~/Content/dist/img/CTXMonLogo.png" alt="CTXMonLogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link">@ViewBag.Title</a>
                </li>

            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
            <a class="nav-link" href="/Giris/Cikis">Çıkış Yap</a>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Anasayfa" class="brand-link">
                <img src="~/Content/dist/img/CTXMonLogo.png" alt="test.anilyekta" class="brand-image img-circle elevation-3 logo">
                <span class="brand-text font-weight-light">test.anilyekta</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library --> 

                        <li class="nav-item">
                            @if (GecerliAdres == "/" || GecerliAdres == "/Anasayfa")
                            {
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-home"></i>
                                    <p>
                                        Ana Sayfa
                                    </p>
                                </a>
                            }
                            else
                            {
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-home"></i>
                                    <p>
                                        Ana Sayfa
                                    </p>
                                </a>
                            }
                        </li>

                        <li class="nav-item">
                            @if (GecerliAdres == "/CTX/SonVeriler")
                            {
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-database"></i>
                                    <p>
                                        Son Veriler
                                    </p>
                                </a>
                            }
                            else
                            {
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-database"></i>
                                    <p>
                                        Son Veriler
                                    </p>
                                </a>
                            }
                        </li>

                        <li class="nav-item">
                            @if (GecerliAdres == "/CTX/OrtalamaVeriler")
                            {
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        Ortalama Verileri
                                    </p>
                                </a>
                            }
                            else
                            {
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        Ortalama Verileri
                                    </p>
                                </a>
                            }
                        </li>



                    </ul>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        @RenderBody()



        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->

    </div>
    <!-- ./wrapper -->
</body>
</html>
